<h1><%= @task.title %></h1>
<%= link_to "edit this task", edit_path %>
<div>
  <span><%= @task.details %></span>
</div>
<div>
  <% if @task.completed == true %>
     <input id="<%= @task.title %>" type="checkbox" checked>
    <span>This task is completed</span>
  <% else %>
    <input id="<%= @task.title %>" type="checkbox">
    <span>This task is not completed yet</span>
  <% end %>
</div>

<p><%= link_to "Back to list", tasks_path%></p>

